{
    "tabs": {
        "name": "tabs",

        "nav": {
            "item": {
                "transition": "core(transition)",
                "color": "core(text-color)",
                "background": "transparent",
                "border-radius": "0.6em",
                "padding": "0.75em 1.25em",
                "border": "1px solid color(greyscale, grey-3)",
                "hover": {
                    "color": "color(greyscale, grey-5)",
                    "background": "darken(color(greyscale, grey-1), 4%)"
                },
                "active": {
                    "color": "color(greyscale, white)",
                    "background": "color(brand, brand-1)",
                    "border-color": "color(brand, brand-1)"
                }
            }
        },

        "content": {
            "color": "core(text-color)",
            "background": "color(greyscale, white)",
            "border": "1px solid color(greyscale, grey-2)",
            "padding": "1.5em",
            "glueHeight": "6px",
            "glueColor": "color(brand, brand-1)"
        },

        "navItem-hover-color": "color('greyscale', 'grey-5')",
        "navItem-hover-background": "darken(color('greyscale', 'grey-1'), 4%)",
        "navItem-active-color": "color('greyscale', 'white')",
        "navItem-active-background": "color('brand', 'brand-1')",
        "navItem-active-borderColor": "color('brand', 'brand-1')",
        
        "contentBlock-glueHeight": "6px",
        "contentBlock-glueColor": "color('brand', 'brand-1')",

        "activeClass": "active"
    }
}