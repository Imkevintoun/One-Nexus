{
    "dropdown": {
        "name": "dropdown",
        "target": "ul ul",
        "text-align": "left",
        "transition": "core(transition)",
        "font-size": "font-size(size-2, true)",
        "min-width": "175px",
        "top-position": "0",
        "dropdown-icon": "'\\f105'",
        "low-level-icon": "'\\f105'",
        "link": {
            "color": "color(greyscale, grey-4)",
            "background": "color(greyscale, grey-1)",
            "padding": "0.6rem",
            "border-top": "1px solid color(greyscale, grey-2)",
            "hover": {
                "color": "color(greyscale, white)",
                "background": "color(brand, brand-1)",
                "border-color": "color(brand, brand-1)"
            },
            "active": {
                "color": "color(brand, brand-1)",
                "background": "color(brand, brand-1)"
            }
        }
    }
}